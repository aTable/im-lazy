{
  "Serilog": {
    "Using": ["Serilog.Sinks.AzureTableStorage"],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore.Authentication": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": ["FromLogContext"],
    "WriteTo": [
      {
        "Name": "AzureTableStorage",
        "Args": {
          "storageTableName": "",
          "connectionString": "{your-azure-table-storage-connection-string. Supply this value via environment variables not here (this is just a reference)}"
        }
      }
    ]
  },
  "App": {
    "WebClientOrigin": "https://{your-azure-storage-account}.z8.web.core.windows.net",
    "IsRunSeed": false,
    "AzureKeyVault": {
      "CertName": "{your-azure-cert-name}",
      "Uri": "https://{your-azure-vault-name}.vault.azure.net/"
    }
  }
}
