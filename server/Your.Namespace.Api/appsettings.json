{
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://0.0.0.0:9080"
      },
      "Https": {
        "Url": "https://0.0.0.0:9081"
      }
    },
    "AllowSynchronousIO": true
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.SQLite",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Authentication": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": ["FromLogContext"],
    "WriteTo": [
      {
        "Name": "SQLite",
        "Args": {
          "sqliteDbPath": "log.db",
          "tableName": "logs",
          "storeTimestampInUtc": true
        }
      },
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": { "path": "log.log", "rollingInterval": "Day" }
      }
    ]
  },
  "ConnectionStrings": {
    "ConnectionString": "Data source=./yournamespaceapi.db"
  },
  "App": {
    "ApiName": "MyAwesome-API",
    "CorsPolicyName": "_corsPolicyName",
    "WebClientOrigin": "https://localhost:3000",
    "AuthorizationServerUri": "http://localhost:9082",
    "AuthorizationServerRequiresHttps": false,
    "IsRunMigrations": true,
    "IsRunSeed": true,
    "MaxPageSize": 100,
    "GraphSettings": {
      "Path": "/graphql",
      "PlaygroundPath": "/playground"
    }
  },
  "AllowedHosts": "*"
}
